<section id="new-book">
    <div class="fixed-action-btn" id="controls">
        <a class="btn-floating btn-large red">
            <i class="material-icons">add</i>
        </a>
        <ul>
            <li>
                <a class="btn-floating waves-blue" id="save-book" title="save book">
                    <i class="material-icons">done_all</i>
                </a>
            </li>
            <li>
                <a class="btn-floating green" id="add-paragraph" title="add paragraph">
                    <i class="material-icons">library_books</i>
                </a>
            </li>
            <li>
                <a class="btn-floating blue" title="add page">
                    <i class="material-icons">note_add</i>
                </a>
            </li>
        </ul>
    </div>
    <h4>Нова книга</h4>
    <div class="row">
        <div class="input-field col s8 offset-s2">
            <input id="book-name" type="text" name="book-name">
            <label for="book-name">Назва книги:</label>
        </div>
        <div class="input-field col s8 offset-s2">
            <input id="book-author" type="text" name="author">
            <label for="book-author">Автор книги:</label>
        </div>
    </div>
    <hr/>
    <div id="chapters">
        <div class="row chapter">
            <h5>Розділ 1</h5>
            <div class="input-field col s8 offset-s2">
                <input type="hidden" name="chapter" value="1">
                <input id="chapter-name" type="text" name="ch-name">
                <label for="chapter-name">Назва розділу:</label>
            </div>
            <div id="pages" class="row">
                <div class="row">
                    <div class="page col s8 offset-s2" data-page="1">
                        <h4 class="center-align">Сторніка 1</h4>
                        <input type="hidden" name="page" value="1">
                        <div id="paragraphs" class="row">
                            <div class="paragraph col s8 offset-s2">
                                <label>Параграф:</label>
                                <textarea name="paragraph"></textarea>
                                <a href="#remove-paragraph"
                                   class="remove-paragraph btn waves-effect waves-light right red darken-1">
                                    Видалити
                                </a>
                            </div>
                            <div class="paragraph col s8 offset-s2">
                                <label>Параграф:</label>
                                <textarea name="paragraph"></textarea>
                                <a href="#remove-paragraph"
                                   class="remove-paragraph btn waves-effect waves-light right red darken-1">
                                    Видалити
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>